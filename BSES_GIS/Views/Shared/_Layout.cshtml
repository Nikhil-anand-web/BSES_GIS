    <script>
        const ctrl_y = document.getElementById("ctrl_y");
        const ctrl_X = document.getElementById("ctrl_X");
        const table_mover = document.getElementById("table_mover")
        const table_mover_3d = document.getElementById("table_mover_3d")
        
        

        
        var
            
            doc = document,
            ht = $("#main").height(),
            wd = $("#main").width(),
            hight_in_pr,
            x, y, dx, dy,
            XForMove,YForMove,dxMv,dyMv,bottomm,left;

        bottomm = parseFloat($('#main').css('bottom'));
        left =parseFloat( $('#main').css('left'));
         
        var startResize_y = function (evt) {
            
            y = evt.clientY;
        };
        var startResize_X = function (evt) {
            
           x = evt.clientX;
        };

        var resize_y = function (evt) {
            
            dy = evt.clientY - y;
            y = evt.clientY;
            console.log(dy)
            ht = ht-dy;
            $("#main").height(ht)
            $("#ctrl_X").height(ht)
        } 
        var resize_X = function (evt) {
            
            dx = evt.clientX - x;
            x = evt.clientX;
            
            wd = wd+dx;
            $("#main").width(wd);
        }

        var movement_initialize = function(evt){
            XForMove = evt.clientX;
            YForMove = evt.clientY;


        }
        var StartMoving = function(evt){
            dxMv = evt.clientX - XForMove;
            dyMv = evt.clientY - YForMove;
            XForMove = evt.clientX;
            YForMove = evt.clientY;
            bottomm = bottomm - dyMv;
            left = left + dxMv;

            $('#main').css('bottom', bottomm+"px");
            $('#main').css('left', left+"px");


        }

        



        ctrl_y.addEventListener("mousedown", function (evt) {
            startResize_y(evt);
            document.body.addEventListener("mousemove", resize_y);
            document.body.addEventListener("mouseup", function () {
                document.body.removeEventListener("mousemove", resize_y);
            });
            
            
        });
        ctrl_X.addEventListener("mousedown", function (evt) {
            startResize_X(evt);
            document.body.addEventListener("mousemove", resize_X);
            document.body.addEventListener("mouseup", function () {
                document.body.removeEventListener("mousemove", resize_X);
            });
            
            
        });
       table_mover.addEventListener("click",function(){

            document.getElementById("main").classList.add("hide_table")
            document.getElementById("main").style.height = 200 + "px"
           
       })
       table_mover_3d.addEventListener("mousedown",function(evt){
            movement_initialize(evt);
            document.body.addEventListener("mousemove", StartMoving);
            document.body.addEventListener("mouseup", function () {
                document.body.removeEventListener("mousemove", StartMoving);
            });

       })
       
    </script>
